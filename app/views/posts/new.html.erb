<h1>New Post</h1>

<div class="row">

	<div class="span6">
		<%= form_for @post, html: {class: 'form-horizontal', multipart: true} do |post| %>

			<div class="control-group">
				<%= post.label :title, class: 'control-label' %>
				<div class="controls">
					<%= post.text_field :title %>
				</div>
			</div>

			<div class="control-group">
				<%= post.label :image, class: 'control-label' %>
				<div class="controls">
					<%= post.file_field :image %>
				</div>
			</div>

			<%= post.fields_for :beer_attributes do |beer| %>

				<div class="control-group">
					<%= beer.label :name, class: 'control-label' %>
					<div class="controls">
						<%= beer.text_field :name %>
					</div>
				</div>

				<div class="control-group">
					<%= beer.label :style, class: 'control-label' %>
					<div class="controls">
						<%= beer.text_field :style %>
					</div>
				</div>

				<div class="control-group">
					<%= beer.label :abv, class: 'control-label' %>
					<div class="controls">
						<%= beer.text_field :abv %> %
					</div>
				</div>

				<div class="control-group">
					<%= beer.label :description, class: 'control-label' %>
					<div class="controls">
						<%= beer.text_area :description %>
					</div>
				</div>

			<% end %>

			<div class="control-group">
				<div class="controls">
					<%= post.submit "Save", class: 'btn' %>
				</div>
			</div>

		<% end %>
	</div>

	<div class="span4">
		
	</div>

</div>