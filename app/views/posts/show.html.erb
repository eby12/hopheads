<div class="row">
	<div class="span8">
		<h1> <%= @post.beer.name %> </h1>

		<p><b>Brewery:</b> <%= @post.brewery.name %></p>
		<p><b>Beer Style:</b> <%= @post.beer.style %></p>
		<p><b>Alcohol Percentage:</b> <%= @post.beer.abv %>%</p>
		<p><b>Beer Description:</b> <%= @post.beer.description %> </p>
		<p><%= image_tag @post.image.url %></p>

		<hr />
		<h2><%= @comments.count %> Comments </h2>

		<%= render partial: 'comments/comment', collection: @comments %>

		<% if can? :create, Comment %>
			<hr />
			<h4>New Comment</h4>
			<%= render partial: 'comments/form', locals: {post: @post, comment: @comment} %>
		<% end %>
	</div>

	<div class="span4">
		<% if can? :edit, @post %>
			<%= link_to "Edit", edit_post_path(@post), class: 'btn btn-large btn-block' %>
		<% end %>

		<% if can? :destroy, @post %>
			<%= link_to "Delete Post", @post, method: :delete, class: 'btn btn-large btn-block btn-danger', confirm: 'Are you sure you want to delete this Post?' %>
		<% end %>
	</div>
</div>

