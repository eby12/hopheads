<h1> <%= @post.title %> </h1>

<% if can? :edit, @post %>
	<%= link_to "Edit", edit_post_path(@post), class: 'btn btn-mini' %>
<% end %>

<% if can? :destroy, @post %>
	<%= link_to "Delete Wiki", @post, method: :delete, class: 'btn btn-small btn-danger', confirm: 'Are you sure you want to delete this Wiki?' %>
<% end %>
